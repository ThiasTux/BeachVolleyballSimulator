<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <screen id="controls" controller="com.thiastux.beachvolleyhuman.BeachVolleyballSimulator">
        <layer id="foreground" childLayout="horizontal">
            <panel id="containerPanel" width="100%"
                   childLayout="horizontal" valign="top"
                   backgroundColor="#fff0" height="10%"
                   visibleToMouse="true">
                <panel id="numShots" width="10%"
                       childLayout="horizontal" valign="center"
                       backgroundColor="#f00f" height="100%">
                    <text id="numShotsText" font="Interface/Fonts/Default.fnt" style="nifty-label"
                          color="#ffff" text="20" align="center"
                          valign="center" height="100%"
                          width="100%"/>
                </panel>
                <panel id="spacer" width="80%"
                       childLayout="horizontal" valign="center"
                       backgroundColor="#fff0" height="100%"/>
                <panel id="points" width="10%"
                       childLayout="horizontal" valign="center"
                       backgroundColor="#f00f" height="100%">
                    <text id="score" font="Interface/Fonts/Default.fnt" assestyle="nifty-label"
                          color="#ffff" text="20" align="center"
                          valign="center" height="90%"
                          width="90%"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>